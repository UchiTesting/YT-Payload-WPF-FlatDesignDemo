<Window x:Class="FlatDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlatDesign"
        Title="Flat Design Demo" Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        xmlns:vm="clr-namespace:FlatDesign.MVVM.ViewModel"
        >
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Border Background="#272537" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                Text="Flat Design Demo" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Foreground="White"
                FontSize="24"
                FontFamily="/Fonts/#Ramaraja"
                
            />

            <StackPanel Grid.Row="1" Grid.Column="0">
                <RadioButton Content="Home"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                    IsChecked="True"
                    Command="{Binding HomeViewCommand}"
                />
                <RadioButton Content="Our Feature"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                />
                <RadioButton Content="About Us"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                    Command="{Binding AboutUsViewCommand}"
                />
            </StackPanel>

            <Grid Grid.Row="0" Grid.Column="1"
                        >

                <TextBox 
                     Width="250" Height="40"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="5"
                     Style="{StaticResource SearchBoxTheme}"
                     />


                <Border Width="40" Height="40"
                        HorizontalAlignment="Right"
                        Margin="0,0,20,0"
                    >
                    <Border.Clip>
                        <RectangleGeometry Rect="0,0,40,40"
                                           RadiusX="10"
                                           RadiusY="10" />
                    </Border.Clip>
                <Button
                    Width="40" Height="40"
                    Foreground="White"
                    Background="Red"
                    Content="✖"
                    FontSize="20"
                    BorderThickness="0"
                    Command="{Binding CloseApplicationViewCommand}"
                    />
                </Border>
            </Grid>

            <ContentControl Grid.Row="1" Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}"
                            />

        </Grid>
    </Border>
</Window>
